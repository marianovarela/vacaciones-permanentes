<html>
<head>
    <title>Permanent Vacations</title>
    <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">

    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>
    <script src="/javascripts/app.js"></script>
    <script src="/javascripts/moment.js"></script>
    <script src="/javascripts/angular-moment.min.js"></script>
    <style> .glyphicon-thumbs-up { cursor:pointer } </style>
</head>
<body ng-app="vacacionesPermanentes">

<div class="page-header">
	<div>
        <h1>Permanent Vacations</h1>
    </div>

	<nav class="navbar navbar-default pull-right" ng-controller="NavCtrl">
	    <ul class="nav navbar-nav">
	        <li ng-show="isLoggedIn()"><a>{{ currentUser() }}</a></li>
	        <li ng-show="isLoggedIn()"><a href="" ng-click="logOut()">Log Out</a></li>
	        <li ng-hide="isLoggedIn()"><a href="/#/login">Log In</a></li>
	        <li ng-hide="isLoggedIn()"><a href="/#/register">Register</a></li>
	    </ul>
	</nav>
</div>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <ui-view></ui-view>
    </div>
</div>

<script type="text/ng-template" id="/home.html">
    <div ng-show="trips.length > 0">
	    <div>
	    	<h2>My trips</h2>
	    </div>
	    <div ng-repeat="trip in trips">
	      <span>
            <a href="#/trips/{{trip._id}}">{{trip.name}}</a>
	      </span>
	      <button ng-click="deleteTrip()">
	      	<span class="glyphicon glyphicon-remove-circle"</span>
	      </button>	
	    </div>
    </div>
    
    <form ng-submit="addTrip()"
          style="margin-top:30px;">
        <h3>Add trip</h3>

        <div class="form-group">
            <input type="text"
                   class="form-control"
                   placeholder="name"
                   ng-model="trip.name"></input>
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
    </form>
</script>

<script type="text/ng-template" id="/trips.html">
 	trip view
</script>

<script type="text/ng-template" id="/register.html">
    <div ng-show="error" class="alert alert-danger row">
        <span>{{ error.message }}</span>
    </div>

    <form ng-submit="register()"
          style="margin-top:30px;">
        <h3>Register</h3>

        <div class="form-group">
            <input type="text"
                   class="form-control"
                   placeholder="Username"
                   ng-model="user.username"></input>
        </div>
        <div class="form-group">
            <input type="password"
                   class="form-control"
                   placeholder="Password"
                   ng-model="user.password"></input>
        </div>
        <button type="submit" class="btn btn-primary">Register</button>
    </form>
</script>
<script type="text/ng-template" id="/login.html">
    <div class="page-header">
        <h1>Permanent Vacations</h1>
    </div>

    <div ng-show="error" class="alert alert-danger row">
        <span>{{ error.message }}</span>
    </div>

    <form ng-submit="logIn()"
          style="margin-top:30px;">
        <h3>Log In</h3>

        <div class="form-group">
            <input type="text"
                   class="form-control"
                   placeholder="Username"
                   ng-model="user.username"></input>
        </div>
        <div class="form-group">
            <input type="password"
                   class="form-control"
                   placeholder="Password"
                   ng-model="user.password"></input>
        </div>
        <button type="submit" class="btn btn-primary">Log In</button>
    </form>
</script>
</body>
</html>